# HistoryMosaic — Environment Variables
# Copy this file to .env and fill in your values. Never commit .env to git.

# ----------------------------
# OpenAI
# ----------------------------
OPENAI_API_KEY=sk-...

# ----------------------------
# X (Twitter) API
# Get these from: https://developer.twitter.com/en/portal/dashboard
# Requires: Free tier or higher, with Read+Write permissions on your App
# ----------------------------
X_API_KEY=your_api_key_here
X_API_SECRET=your_api_key_secret_here
X_ACCESS_TOKEN=your_access_token_here
X_ACCESS_TOKEN_SECRET=your_access_token_secret_here

# ----------------------------
# App Settings
# ----------------------------
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Daily post time in UTC (24-hour format, e.g. "09:00", "12:00", "18:00")
POST_TIME_UTC=12:00

# Dry run — set to true to generate tweets without posting them
DRY_RUN=false

# Persistent storage — on Railway mount a Volume at /data and set DATA_DIR=/data
# Leave blank locally (defaults to events/ directory)
DATA_DIR=

# Telegram alerting — get notified when the bot fails (optional)
# See: https://core.telegram.org/bots#how-do-i-create-a-bot
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
